/* pages/thatday/thatday.wxss */
.section{
    padding:50rpx 0;
    text-align: center;
}
.section_title{
    font-size:16pt;
    color:#666;
}
.item{
    display: flex;
    padding:30rpx 30rpx 10rpx 30rpx;
    flex:1;
    justify-content:center;
    align-items:center;
    background: #fff;
    border-bottom:1px solid #f1f1f1;
}
.item:first-child{
    border-top:1px solid #f1f1f1;
}
.item_m{
    flex:1;
}
.item_r{
    height:50rpx;
    flex:0 0 50rpx;
    text-align: right;
}
.title{
    margin-bottom:20rpx;
    line-height: 1.3em;
    font-size:17px;
    color:#323232;
}
.date{
    font-size:13px;
    color:#999;
}
.icon-date{
    margin-right:10rpx;
}
.icon-right{
    color:#d9d9d9;
}